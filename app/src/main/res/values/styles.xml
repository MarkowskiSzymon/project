<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhiteStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color">#42B4DE</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:fontFamily">@font/dosis_medium</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.trans" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        ...
    </style>



    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorDellyGreen</item>
        <item name="android:textColorSecondary">@color/colorGrey</item>

    </style>


</resources>
