<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_relativeLaout_history_transaction"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/kafelek_partnera_tlo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/view_layout_history_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView_layout_history_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="2019-04-10 11:57:07" />

            <TextView
                android:id="@+id/textView_layout_history_name"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_layout_history_date"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxEms="15"
                android:singleLine="true"
                android:text="3G Dentist "

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView_layout_history_date"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/textView_layout_history_date">

                <ImageView
                    android:id="@+id/imageView_history_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_credit_card_black_24dp" />

                <TextView
                    android:id="@+id/textView_layout_history_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageView_history_icon"
                    android:text="3403043" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView_layout_history_image"
                android:background="@drawable/background_circuar"
                android:layout_width="62dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/delly_logo" />

    </RelativeLayout>

        <View
            android:id="@+id/linia"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/view_layout_history_top"
            android:background="#ACA8A8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linia"
            android:layout_margin="5dp">


            <TextView
                android:id="@+id/textView_layout_history_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:text="Dodanie punktów" />

            <TextView
                android:id="@+id/textView_layout_history_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/textView_layout_history_type"
                android:text="369,00 zł" />

            <TextView
                android:id="@+id/textView_layout_history_expanse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorDellyGreen"
                android:text="25 ptk" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>