<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    tools:context="com.example.project.activity_fragments_class.CreatePasswordActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_activityCreatePassword_up"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="50dp">

        
        <TextView
            android:id="@+id/textView_activityCreatePassword_yourPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yourPassword"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textSize="30dp"/>

        <TextView
            android:layout_below="@id/textView_activityCreatePassword_yourPassword"
            android:id="@+id/textView_activityCreatePassword_setYourPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setYourPassword"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:lines="2"
            android:textSize="15dp"/>

        <RelativeLayout
            android:layout_below="@id/textView_activityCreatePassword_setYourPasswordText"
            android:id="@+id/relativeLayout_activityCreatePassword_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border_edittext" />

            <TextView
                android:id="@+id/textView_activityCreatePassword_dummyHintOldPassword"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Hasło"
                android:textSize="16sp"
                android:visibility="invisible" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_activityCreatePassword_oldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="-156dp"
                android:hint="@string/oldPassword"
                app:hintTextAppearance="@style/HintTextStyle"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/blue_pressed">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_activityCreatePassword_oldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textinputlayout_activityCreatePassword_password"
                    android:backgroundTint="@android:color/transparent"
                    android:inputType="textPassword" />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_activityCreatePassword_password"
            android:layout_below="@id/relativeLayout_activityCreatePassword_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border_edittext" />

            <TextView
                android:id="@+id/textView_activityCreatePassword_dummyHintPassword"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Hasło"
                android:textSize="16sp"
                android:visibility="invisible" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_activityCreatePassword_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="-156dp"
                android:hint="@string/newPassword"
                app:hintTextAppearance="@style/HintTextStyle"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/blue_pressed">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_activityCreatePassword_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textinputlayout_activityCreatePassword_password"
                    android:backgroundTint="@android:color/transparent"
                    android:inputType="textPassword"
                    android:text="" />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_activityCreatePassword_passwordRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/relativeLayout_activityCreatePassword_password"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border_edittext" />

            <TextView
                android:id="@+id/textView_activityCreatePassword_dummyHintPasswordRepeat"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Powtórz hasło  "
                android:visibility="invisible" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_activityCreatePassword_passwordRepeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginStart="7dp"
                android:hint="@string/repeatNewPassword"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/blue_pressed"
                app:hintTextAppearance="@style/HintTextStyle">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_activityCreatePassword_passwordRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:inputType="textPassword"
                    android:text="" />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        <TextView
            android:layout_below="@+id/relativeLayout_activityCreatePassword_passwordRepeat"
            android:id="@+id/textView_activityCreatePassword_infoAboutPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infoAboutPassword"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:lines="2"/>

        <Button
            android:layout_below="@id/textView_activityCreatePassword_infoAboutPassword"
            android:id="@+id/button_activityCreatePassword_buttonSavePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:backgroundTint="@color/colorDellyGreen"
            android:ems="10"
            android:text="@string/buttonSavePassword"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_activityCreatePassword_transiston_create"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/relativeLayout_activityCreatePassword_up"
        android:background="@drawable/delly_background"
        android:transitionName="example_transistion">

    </RelativeLayout>


</RelativeLayout>
