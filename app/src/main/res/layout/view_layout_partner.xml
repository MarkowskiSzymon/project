<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_viewLayoutPartner_fullPartnerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="5dp"
    android:background="@drawable/kafelek_partnera_tlo">


    <RelativeLayout
        android:id="@+id/relativeLayout_viewLayoutPartner_upLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_viewLayoutPartner_logo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/colorDellyGradientBlue"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ico_call"
            android:transitionName="example_transistion"
            tools:ignore="UnusedAttribute"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_viewLayoutPartner_logo"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView_viewLayoutPartner_partnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="NameOfPartner"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_viewLayoutPartner_ownedPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linia"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView_viewLayoutPartner_partnerName"
                android:text="15 ptk"
                android:textColor="@color/colorDellyGreen"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView_viewLayoutPartner_distanceFromPartner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView_viewLayoutPartner_partnerName"
                android:layout_alignParentEnd="true"
                android:text="3,8km"
                android:textSize="15dp" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>