<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_leftNavigation_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/nav_header_desc"
            android:src="@drawable/delly_logo"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/textView_leftNavigation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="XXXXXX"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@id/imageView_leftNavigation_icon"/>

        <TextView
            android:id="@+id/textView_leftNavigation_cardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numer karty: XXXXXXX"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView_leftNavigation_name"/>
        <View
            android:id="@+id/linia"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#ACA8A8"
            android:layout_marginTop="5dp"
            android:layout_below="@id/textView_leftNavigation_cardNumber"
            />

    </RelativeLayout>



</android.support.design.widget.NavigationView>
