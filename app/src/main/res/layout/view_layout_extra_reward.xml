<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_viewLayoutExtraReward_fullCardLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="5dp"
    android:background="@drawable/kafelek_partnera_tlo">

    <RelativeLayout
        android:id="@+id/relativeLayout_viewLayoutExtraReward_upLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_viewLayoutExtraReward_logo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/ic_ico_call"
            android:transitionName="example_transistion" />

        <RelativeLayout
            android:id="@+id/relativeLayout_viewLayoutExtraReward_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_viewLayoutExtraReward_logo"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView_viewLayoutExtraReward_partnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="NameOfPartner"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_viewLayoutExtraReward_ownedPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linia"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView_viewLayoutExtraReward_partnerName"
                android:text="15 ptk"
                android:textColor="@color/colorDellyGreen"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView_viewLayoutExtraReward_distanceFromPartner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView_viewLayoutPartner_partnerName"
                android:layout_alignParentEnd="true"
                android:text="3,8km"
                android:textSize="15dp" />

        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout_viewLayoutExtraReward_listOfRewards"
        android:layout_below="@id/relativeLayout_viewLayoutExtraReward_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout_viewLayoutExtraReward_listOfRewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/view_layout_extended_description_partner"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_tekstu_schowaj_nagrode"
        android:visibility="gone"
        android:layout_below="@+id/relativeLayout_viewLayoutExtraReward_listOfRewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewSchowajNagrody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCHOWAJ NAGRODY"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/dosis_bold"
            android:textColor="#42B4DE"/>

    </RelativeLayout>

</RelativeLayout>

</RelativeLayout>